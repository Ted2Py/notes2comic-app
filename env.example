# Database
POSTGRES_URL=postgresql://user:password@localhost:5432/db_name

# Authentication - Better Auth
# Generate a secure random key using: openssl rand -base64 32
BETTER_AUTH_SECRET=

# AI Integration via OpenRouter (Optional - for chat functionality)
# Get your API key from: https://openrouter.ai/settings/keys
# View available models at: https://openrouter.ai/models
OPENROUTER_API_KEY=
OPENROUTER_MODEL="openai/gpt-5-mini"

# Optional - for vector search only
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"

# Google AI - Gemini API (for comic generation)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# App URL (update this for production deployments)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# File storage (optional - for file uploads)
# Leave empty for local development, set for Vercel Blob in production
BLOB_READ_WRITE_TOKEN=

# Polar payment processing (optional)
# Get these from: https://sandbox.polar.sh/dashboard (sandbox) or https://polar.sh/dashboard (production)
POLAR_WEBHOOK_SECRET=polar_
POLAR_ACCESS_TOKEN=polar_
